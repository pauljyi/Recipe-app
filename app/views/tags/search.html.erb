<h1>Search For Recipes By tag</h1><br>

<form action='/tags/search' method='get'>
  <label for="tag_search_input">Enter Tag Name:</label>
  <input id="tag_search_input" type="text" name="search_string"/>
  <input type="submit" value="Search"/>
</form><br>

<p><%= link_to 'Back', recipes_path %></p>

<% if !@tags.nil? %>
  <% if !@tags.empty? %>
    <h3>Recipes found:</h3>
    <% @tags.each do |tag| %>
      <%= link_to tag.recipe.title, tag.recipe %><br>
    <% end %>
  <% else %>
    <h3>No Recipes Found</h3>
  <% end %>
<% end %>
